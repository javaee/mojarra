                <sysproperty key="instance.numbers" value="@{instance.numbers}" />
                <sysproperty key="virtual-server" value="@{virtual-server}" />
                <custom-sysproperties/>
                <batchtest todir="@{test-results-dir}">
                    <tests/>
                </batchtest>
                <suite/>
            </junit>
        </sequential>
    </macrodef>

