                </not>
            </and>
            <then>
                <get src="${central.maven2}/junit/junit/${junit.version}/junit-${junit.version}.jar"
                     dest="${junit.jar}"
                     usetimestamp="true"/>
            </then>
        </if>

        <!-- HTMLUNIT -->
